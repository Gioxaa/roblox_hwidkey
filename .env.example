PORT=4000
NODE_ENV=production

ADMIN_USER=admin
# ADMIN_PASS supports plaintext OR bcrypt hash ($2a$...). If plaintext, hash it on boot and keep only in-memory.
ADMIN_PASS=ubahini

JWT_ISSUER=your-issuer
JWT_AUDIENCE=your-app
JWT_KID=rsa-2025-09-20

PRIVATE_KEY_PATH=./keys/private.pem
PUBLIC_KEY_PATH=./keys/public.pem

RATE_MAX_PER_MIN=120
SLOW_AFTER_PER_MIN=20
SLOW_DELAY_MS=200

TRUST_PROXY=loopback
# comma-separated origins or * for all
CORS_ORIGINS=*

# Discord bot (optional)
INCLUDE_DISCORD_BOT=false
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
# Optional: scope commands to a guild for instant updates
DISCORD_GUILD_ID=
# API base URL for the issuer (e.g., http://localhost:4000)
ISSUER_BASE_URL=http://localhost:4000
# Basic auth sent by the bot when calling /issue and /revoke
ISSUER_BASIC_USER=admin
ISSUER_BASIC_PASS=ubahini
